<div class="row">
  <div class="col-sm-2">
    <%= gravatar_for(comment.chef, size: 40) %>
  </div>
  <div class="col-sm-10">
    <p><%= comment.body %></p>
    <span class="quiet"><small>
      [posted <%= time_ago_in_words(comment.created_at) %> ago
      by <%= comment.chef.chefname.capitalize %>]
    </small></span>
    <% if logged_in? && (current_chef == comment.chef || current_chef.admin?) %>
      <%= link_to "Remove Comment", [@recipe, comment], method: :delete,
                                    class: "btn btn-outline-danger btn-sm",
                                    data: { confirm: "Are you sure you want to remove this comment?" } %>
    <% end %>
  </div>
</div>
<hr>