<div class="container">
  <%= render 'shared/page_title', title: "All Recipes" %>
  <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-md-2">
        
      </div>
      <div class="col-md-10">
        <h4><%= link_to recipe.name, recipe_path(recipe.id) %></h4>
        <p><%= truncate(recipe.description, length: 75) %></p>
        <p>
          <span class="quiet">
            <small>created <%= time_ago_in_words(recipe.created_at) %> ago</small>
          </span>
        </p>
      </div>
    </div>
    
    <hr>
  <% end %>
</div>
