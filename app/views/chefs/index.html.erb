<div class="container">
  
  <%= render "shared/page_title", title: "All Chefs" %>
  
  <div id="chef-listing">
    <div align="center">
      <% @chefs.each do |chef| %>
        <div class="row justify-content-center">
          <div class="col-md-2">
            <%= gravatar_for chef, size: 75 %>
          </div>
          <div class="col-md-6" id="chef-listing-name">
            <h4><%= link_to chef.chefname, chef_path(chef.id) %></h4>
            <p><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></p>
            <p><%= link_to "Remove Chef", chef_path(chef), method: :delete,
                   class: "btn btn-sm btn-outline-danger",
                   data: { confirm: "Are you sure you want to delete this Chef and all associated recipes?" } %></p>
          </div>
        </div>
        <hr>
      <% end %>  
    </div>
   </div>
   
   <%= will_paginate(@chefs, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
   
</div>