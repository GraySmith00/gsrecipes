<div class="container">
  <%= render "shared/page_title", title: "Chef Chat" %>
  
  <div class="row chat-container">
    <div class="col-md-8 offset-md-2 center-block">
      
      <div class="messages" id="messages">
        <%= render @messages %>
      </div>
      
      <hr>
    
      <div class="message-container">
        <%= form_for(@message, remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <%= f.text_area :content, class: "form-control", placeholder: "Send new message!" %>
          <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
      </div>
      
    </div>
  </div>  
  
</div>

